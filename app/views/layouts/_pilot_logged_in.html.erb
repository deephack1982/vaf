<div class="top-bar">
  <div class="top-bar-left">
    <%= link_to image_tag("vaf_roundel-mini.png", border: 0, size: "32x32"), {action: 'index', controller: 'crew_room'}, class: "hollow button" %>
    <%= link_to "Service History", crew_room_service_history_path, class: "button", method: :get %>
    <%= link_to "Ready Room", crew_room_ready_room_path, class: "button", method: :get %>
    <%= link_to "Sierra Hotel", crew_room_sierra_hotel_path, class: "button", method: :get %>
    <%= link_to "Stores", crew_room_stores_path, class: "button", method: :get %>
  </div>
  <div class="top-bar-right">
    <% if session[:pilot_id] != nil %>
        <%= link_to 'Logout', session_path("current"), method: :delete, class: "button" %>
    <% else %>
        <%= link_to 'Login', new_session_path, method: :get, class: "button" %>
    <% end %>
  </div>
</div>
<div class="row">
  <%= display_flash_messages %>
  <%= yield %>
</div>
