<h1 class="text-center"><%= @squadron.name %></h1>
<table>
  <tbody>
  <tr>
    <td>
      <p>
        <strong>Aircraft:</strong>
        <%= @squadron.aircraft %>
      </p>
    </td>
    <td>
      <%= image_tag @squadron.badge.url(:small) %>
    </td>
  </tr>
  <tr>
    <td>
      <p>
        <strong>Airbase:</strong>
        <%= @squadron.airfield.name %>
      </p>
    </td>
  </tr>
  </tbody>
</table>
<h1>Pilots in this squadron</h1>
<div class="panel">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Rank</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
  <% @squadron.pilots.each do |p| %>
    <tr>
        <td><%= p.name %></td>
        <td><%= p.rank %></td>
        <td>Not implemented</td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>

<h1>Airframes in this squadron</h1>
<div class="panel">
  <table>
    <thead>
    <tr>
      <th>Tail Number</th>
      <th>Type</th>
      <th>Condition</th>
      <th>Hours</th>
    </tr>
    </thead>
    <tbody>
    <% @squadron.airframes.each do |a| %>
    <tr>
      <td><%= a.tail_number %></td>
      <td><%= a.airframe_type.fullname %></td>
      <td><%= a.condition %></td>
      <td><%= a.hours %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div class="button-group">
  <%= link_to 'Back', squadrons_path, method: :get, :class => "button" %>
  <%= link_to 'Edit', edit_squadron_path(@squadron), method: :get, :class => "button success" %>
</div>